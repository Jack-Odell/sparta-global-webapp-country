<div class="row">
  <% @country.each do |country| %>
  <div class="show-data row">
    <div class="col-md-4">
      <h3><%= country.country %></h3>
    </div>
    <div class="col-md-4">
      <p><strong>Population | </strong><%= country.population %></p>
    </div>
    <div class="col-md-4">
      <p><strong>GDP | </strong><%= country.gdp %></p>
    </div>
  </div>
  <hr>
  <% end %>
</div>
